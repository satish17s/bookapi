{
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "cd gutenberg_api && gunicorn gutenberg_api.wsgi:application --bind 0.0.0.0:$PORT",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10,
        "healthcheckPath": "/",
        "healthcheckTimeout": 100
    }
}
